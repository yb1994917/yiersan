<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/main_light_blue" />
            <corners android:radius="99.0dip" />
            <stroke android:width="1.0px" android:color="@color/main_light_blue" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/main_light_blue" />
            <corners android:radius="99.0dip" />
            <stroke android:width="1.0px" android:color="@color/main_light_blue" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/gray" />
            <corners android:radius="99.0dip" />
            <stroke android:width="1.0px" android:color="@color/gray" />
        </shape>
    </item>
</selector>